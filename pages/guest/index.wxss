/* 背景 */
.bg{
  width: 100vw;
  height: 99vh;
}
input,
picker{
  width: 93%;
  height: 100%;
  padding-left: 5vw;
  font-size: 31rpx;
  color: #ff5e8c;
}
picker{
  position: relative;
}
.picker-jz{
  position: absolute;
  top: 50%;
  transform: translate(0,-50%);
}
.menu{
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 48vh;
  left: 50%;
  width: 80vw;
  height: 41vh;
  transform: translate(-50%);
}
.menu>view{
  flex: 1;
  margin-bottom: 1vh;
  border: 4rpx solid #ff5e8c;
  border-radius: 1vh;
}
.rush{
  width: 100%;
  height: 100%;
  border: none;
  background-color: #ff5e8c;
  color: #fff;
  font-size: 31rpx;
}
.tj{
  background-color: #fef8ef;
  color: #ff5e8c;
}